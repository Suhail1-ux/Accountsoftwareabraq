@page "/transactions/expense-entry"
@using AbraqAccount.Models
@using AbraqAccount.Services.Interfaces
@inject IExpensesIncurredService ExpenseService
@inject NavigationManager Navigation
@layout DashboardLayout

<div class="expense-list-container px-4 py-4">
    <div class="row align-items-center mb-5">
        <div class="col">
            <h3 class="m-0 text-dark fw-800" style="letter-spacing: -0.02em;">Expense Entry <small class="text-muted fw-normal ms-2" style="font-size: 0.5em; text-transform: uppercase; letter-spacing: 0.1em;">Control Panel</small></h3>
        </div>
        <div class="col-auto">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 bg-transparent p-0">
                    <li class="breadcrumb-item"><a href="" class="text-accent text-decoration-none fw-600">Home</a></li>
                    <li class="breadcrumb-item active fw-600 text-muted">Expense Entry</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Filter Section with better gaps -->
    <div class="filter-card card shadow-sm border-0 mb-5">
        <div class="card-body p-4 p-lg-5">
            <div class="row gx-4 gy-4">
                <div class="col-lg-3 col-md-6">
                    <label class="filter-label">Expense Entry Number</label>
                    <input type="text" class="form-control-custom" placeholder="Order ID / Voucher No." @bind="voucherNo" />
                </div>
                <div class="col-lg-3 col-md-6">
                    <label class="filter-label">Credit Account</label>
                    <input type="text" class="form-control-custom" placeholder="Vendor / Credit Name" @bind="vendorName" />
                </div>
                <div class="col-lg-2 col-md-6">
                    <label class="filter-label">Status</label>
                    <select class="form-control-custom" @bind="status">
                        <option value="">All Status</option>
                        <option value="UnApproved">UnApproved</option>
                        <option value="Approved">Approved</option>
                    </select>
                </div>
                <div class="col-lg-2 col-md-6 d-flex align-items-end gap-2">
                    <button class="btn btn-search flex-grow-1" @onclick="Search"><i class="bi bi-search me-2"></i>Search</button>
                    <button class="btn btn-link text-muted p-0 text-decoration-none small fw-600" @onclick="ClearFilters">Clear</button>
                </div>
                <div class="col-lg-2 col-md-12 d-flex align-items-end justify-content-end">
                    <button class="btn btn-add-new-lg" @onclick="CreateNew" title="Create New Entry">
                        <i class="bi bi-plus-lg me-2"></i> New Entry
                    </button>
                </div>

                <div class="col-lg-3 col-md-6 mt-2">
                    <label class="filter-label">From Date</label>
                    <input type="date" class="form-control-custom" @bind="fromDate" />
                </div>
                <div class="col-lg-3 col-md-6 mt-2">
                    <label class="filter-label">To Date</label>
                    <input type="date" class="form-control-custom" @bind="toDate" />
                </div>
            </div>
        </div>
    </div>

    <!-- List Section -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3 border-0">
            <h5 class="card-title mb-0 text-dark fw-bold">Expense Entry - List</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-custom table-hover m-0">
                    <thead>
                        <tr>
                            <th>Expense Entry No. <i class="bi bi-chevron-expand small text-muted"></i></th>
                            <th>Received Date <i class="bi bi-chevron-expand small text-muted"></i></th>
                            <th>Delivery Date <i class="bi bi-chevron-expand small text-muted"></i></th>
                            <th>Debit Account <i class="bi bi-chevron-expand small text-muted"></i></th>
                            <th>Credit Account <i class="bi bi-chevron-expand small text-muted"></i></th>
                            <th>Unit <i class="bi bi-chevron-expand small text-muted"></i></th>
                            <th>Expense Entry Qty. <i class="bi bi-chevron-expand small text-muted"></i></th>
                            <th class="text-end">Amount <i class="bi bi-chevron-expand small text-muted"></i></th>
                            <th class="text-end">Tax Amount <i class="bi bi-chevron-expand small text-muted"></i></th>
                            <th class="text-end">Total Amount <i class="bi bi-chevron-expand small text-muted"></i></th>
                            <th>Status <i class="bi bi-chevron-expand small text-muted"></i></th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (expenses == null)
                        {
                            <tr><td colspan="12" class="text-center py-5"><div class="spinner-border text-primary spinner-border-sm"></div> Loading...</td></tr>
                        }
                        else if (!expenses.Any())
                        {
                            <tr><td colspan="12" class="text-center py-5 text-muted">No expense entries found.</td></tr>
                        }
                        else
                        {
                            @foreach (var exp in expenses)
                            {
                                var totalQty = exp.Items?.Sum(i => i.Qty) ?? 0;
                                var taxAmt = (exp.Items?.Sum(i => i.GSTAmount) ?? 0) + (exp.MiscCharges?.Sum(m => m.GSTAmount) ?? 0);
                                <tr>
                                    <td><span class="fw-medium text-primary cursor-pointer" @onclick="() => Edit(exp.Id)">@exp.VoucherNo</span></td>
                                    <td>@exp.ExpenseDate?.ToString("dd-MM-yyyy")</td>
                                    <td>@exp.BillDate?.ToString("dd-MM-yyyy")</td>
                                    <td>@exp.DebitAccountName</td>
                                    <td>@exp.VendorName</td>
                                    <td>@exp.Unit</td>
                                    <td>@(totalQty > 0 ? totalQty.ToString("N0") : "-")</td>
                                    <td class="text-end">@((exp.Amount ?? 0).ToString("N2"))</td>
                                    <td class="text-end">@taxAmt.ToString("N2")</td>
                                    <td class="text-end fw-bold">@((exp.Amount ?? 0).ToString("N2"))</td>
                                    <td>
                                        <span class="status-badge @(exp.Status == "Approved" ? "approved" : "unapproved")">
                                            @exp.Status
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <div class="d-flex justify-content-center gap-2">
                                            <button class="btn btn-action-icon" title="Edit" @onclick="() => Edit(exp.Id)"><i class="bi bi-pencil"></i></button>
                                            <button class="btn btn-action-icon" title="View" @onclick="() => View(exp.Id)"><i class="bi bi-eye"></i></button>
                                            <button class="btn btn-action-icon text-danger" title="Delete" @onclick="() => Delete(exp.Id)"><i class="bi bi-trash"></i></button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            @if (totalPages > 1)
            {
                <div class="card-footer bg-white border-0 py-3">
                    <nav>
                        <ul class="pagination pagination-sm justify-content-end mb-0">
                            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                <button class="page-link" @onclick="() => GoToPage(currentPage - 1)">Previous</button>
                            </li>
                            @for (int i = 1; i <= totalPages; i++)
                            {
                                var pageNum = i;
                                <li class="page-item @(currentPage == pageNum ? "active" : "")">
                                    <button class="page-link" @onclick="() => GoToPage(pageNum)">@pageNum</button>
                                </li>
                            }
                            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                <button class="page-link" @onclick="() => GoToPage(currentPage + 1)">Next</button>
                            </li>
                        </ul>
                    </nav>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .expense-list-container { background: #f8fafc; min-height: calc(100vh - 80px); }
    .filter-card { background: white; border-radius: 12px; box-shadow: var(--shadow-sm); border: 1px solid var(--border-color); }
    .filter-label { display: block; font-size: 0.75rem; font-weight: 700; color: var(--text-secondary); margin-bottom: 6px; text-transform: uppercase; letter-spacing: 0.025em; }
    .form-control-custom { width: 100%; padding: 10px 14px; border: 1px solid var(--border-color); border-radius: 8px; font-size: 0.875rem; background: #fcfdfe; transition: all 0.2s; }
    .form-control-custom:focus { border-color: var(--accent); outline: none; box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1); background: white; }
    
    .btn-search { background: var(--accent); color: white; border: none; padding: 10px 24px; border-radius: 8px; font-weight: 600; font-size: 0.875rem; transition: all 0.2s; }
    .btn-search:hover { background: var(--accent-hover); transform: translateY(-1px); box-shadow: var(--shadow-md); }
    
    .btn-add-new-lg { 
        background: #10b981; 
        color: white; 
        border: none; 
        padding: 10px 24px; 
        border-radius: 12px; 
        font-weight: 700; 
        display: flex; 
        align-items: center; 
        justify-content: center; 
        transition: all 0.2s; 
        box-shadow: 0 4px 12px rgba(16, 185, 129, 0.2); 
    }
    .btn-add-new-lg:hover { transform: translateY(-2px); background: #059669; box-shadow: 0 6px 15px rgba(16, 185, 129, 0.3); }
    
    .table-custom { border-collapse: separate; border-spacing: 0; }
    .table-custom thead th { background: #f8fafc; border-bottom: 2px solid var(--border-color); color: var(--text-secondary); font-size: 0.75rem; padding: 14px 12px; font-weight: 800; text-transform: uppercase; }
    .table-custom tbody td { padding: 14px 12px; font-size: 0.875rem; color: var(--text-primary); border-bottom: 1px solid var(--border-color); }
    
    .status-badge { padding: 4px 12px; border-radius: 9999px; font-size: 0.7rem; font-weight: 700; text-transform: uppercase; letter-spacing: 0.05em; }
    .status-badge.approved { background: #dcfce7; color: #166534; }
    .status-badge.unapproved { background: #fef3c7; color: #92400e; }
    
    .btn-action-icon { padding: 6px; border: none; background: transparent; color: var(--text-secondary); border-radius: 6px; transition: all 0.2s; }
    .btn-action-icon:hover { color: var(--accent); background: #f1f5f9; }
    
    .pagination .page-link { border: none; margin: 0 4px; border-radius: 8px; color: var(--text-secondary); font-weight: 600; padding: 6px 14px; }
    .pagination .page-item.active .page-link { background: var(--accent); color: white; }
</style>

@code {
    private IEnumerable<ExpensesIncurred>? expenses;
    private string? voucherNo;
    private string? vendorName;
    private string? status;
    private DateTime? fromDate;
    private DateTime? toDate;

    private int currentPage = 1;
    private int pageSize = 10;
    private int totalPages;
    private int totalCount;

    protected override async Task OnInitializedAsync()
    {
        await LoadExpenses();
    }

    private async Task LoadExpenses()
    {
        // Calling service with expanded params to include items and misc for qty/tax calculation
        var result = await ExpenseService.GetExpensesAsync(voucherNo, fromDate, toDate, null, null, null, vendorName, status, currentPage, pageSize);
        expenses = result.expenses;
        totalCount = result.totalCount;
        totalPages = result.totalPages;
    }

    private async Task Search()
    {
        currentPage = 1;
        await LoadExpenses();
    }

    private async Task ClearFilters()
    {
        voucherNo = null;
        vendorName = null;
        status = null;
        fromDate = null;
        toDate = null;
        await Search();
    }

    private async Task GoToPage(int page)
    {
        currentPage = page;
        await LoadExpenses();
    }

    private async Task Delete(int id)
    {
        if (await ExpenseService.DeleteExpenseAsync(id))
        {
            await LoadExpenses();
        }
    }

    private void CreateNew() => Navigation.NavigateTo("/transactions/expense-entry/create");
    private void Edit(int id) => Navigation.NavigateTo($"/transactions/expense-entry/edit/{id}");
    private void View(int id) => Navigation.NavigateTo($"/transactions/expense-entry/view/{id}");
}
