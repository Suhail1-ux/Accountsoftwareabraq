@page "/settings/profile"
@using AbraqAccount.Models
@using AbraqAccount.Services.Interfaces
@using Microsoft.AspNetCore.Components.Authorization
@inject IAccountService AccountService
@inject AuthenticationStateProvider AuthStateProvider

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 overflow-hidden">
                <div class="card-header bg-primary text-white py-4 text-center">
                    <i class="bi bi-person-circle display-1 mb-2"></i>
                    <h2 class="mb-0">User Profile</h2>
                </div>
                <div class="card-body p-4">
                    <div class="mb-4 text-center">
                        <span class="badge bg-success px-3 py-2">Active Account</span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold text-muted small text-uppercase">Username</label>
                        <div class="p-3 bg-light rounded border">
                            <i class="bi bi-person me-2"></i> @username
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold text-muted small text-uppercase">Role / Access</label>
                        <div class="p-3 bg-light rounded border">
                            <i class="bi bi-shield-check me-2"></i> Administrative Access
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-5">
                        <button class="btn btn-outline-primary" @onclick="GoToChangePassword">
                            <i class="bi bi-key me-2"></i> Change Password
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

